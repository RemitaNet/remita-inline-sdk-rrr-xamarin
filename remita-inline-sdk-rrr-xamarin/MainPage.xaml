<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="remita_inline_sdk_rrr_xamarin.MainPage">

    <StackLayout Grid.Row="1"
                     Margin="10"
                     Spacing="20">
        <Frame BackgroundColor="{OnPlatform iOS=LightSlateGray, Android=LightGreen}" Padding="24" CornerRadius="0">
            <Label Text="Remita Inline SDK" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Image Source="xamarin_logo.png" VerticalOptions="Center" HeightRequest="64" />
        
        <Label Text="Want to quickly see how to easily process an RRR?" FontSize="16" Padding="30,0,30,0"/>
   
        <Editor x:Name="editor"
                Placeholder="Enter an RRR"
                HeightRequest="100" FontAttributes="Bold" />
        <Button Text="PROCESS RRR"
                    Clicked="OnButtonClicked" />
    </StackLayout>

</ContentPage>
